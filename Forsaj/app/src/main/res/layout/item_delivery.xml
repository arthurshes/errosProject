<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/deliv_magaz_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"

            android:text="magaz_name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />













        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="130dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/ot"
            android:text="От"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/deliv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/ot"
            android:text="city"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="188dp"
            android:layout_marginTop="30dp"

            android:layout_toEndOf="@+id/deliv_city"
            android:text=","
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/deliv_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="198dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/deliv_city"
            android:text="adress"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />



        <TextView
            android:layout_marginTop="50dp"
            android:layout_marginLeft="130dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/dodo"
            android:text="До"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>





















        <TextView
            android:id="@+id/deliv_city_otprav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/ot"
            android:text="city"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="188dp"
            android:layout_marginTop="50dp"

            android:layout_toEndOf="@+id/deliv_city_otprav"
            android:text=","
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/deliv_adress_otprav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="198dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/deliv_city"
            android:text="adress"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />











































        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_yes"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/button_no_design"
            android:backgroundTint="@color/green"
            android:text="Принять"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="120dp"
            android:src="@drawable/user"
    android:id="@+id/image_deliver_save"
    android:layout_height="120dp"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>